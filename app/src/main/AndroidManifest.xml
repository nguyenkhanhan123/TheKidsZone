<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/bg_splash"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.KidsZone"
        tools:targetApi="31">
        <activity
            android:name=".view.act.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.act.ActivityAiLaTrieuPhu"
            />
        <activity android:name=".view.act.ActivityKidsMusic"/>
        <activity android:name=".view.act.ActivityCrazyMath"
            android:theme="@style/Theme.CrazyMath"
            />
        <activity android:name=".view.act.PlayCrazyMathAct"
            android:theme="@style/Theme.CrazyMath"/>
        <activity android:name=".view.act.ActivitySignIn"
            />
        <activity android:name=".view.act.ActivitySignUp"
            />
        <activity android:name=".view.act.ActivityMessage"/>
        <service android:name=".view.service.MediaService"
            android:exported="false"
            />
    </application>

</manifest>