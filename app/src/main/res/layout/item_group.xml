<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="10dp"
    android:orientation="vertical"
    android:background="@drawable/bg_image2"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FEFED3"
        app:cardCornerRadius="20dp"
        android:layout_margin="1dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="#E1D1F8"
                android:paddingStart="10dp"
                android:paddingVertical="5dp"
                android:text="Nhóm HelloVN"
                android:fontFamily="@font/sap_bold"
                android:textColor="#317874"
                android:shadowRadius="1"
                android:shadowColor="@color/black"
                android:textSize="26sp"
                tools:ignore="HardcodedText,RtlSymmetry" />
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#A05EFF"
    />
            <TextView
                android:id="@+id/id_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingEnd="10dp"
                android:text="ID Nhóm: SQAJAL"
                android:textColor="#7D4DE3"
                android:textSize="18sp"
                android:shadowRadius="1"
                android:shadowColor="@color/black"
                android:fontFamily="@font/text"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingEnd="10dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Trưởng Nhóm:"
                    android:textColor="#7D4DE3"
                    android:textSize="18sp"
                    android:shadowRadius="1"
                    android:shadowColor="@color/black"
                    android:fontFamily="@font/text"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/leader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="32"
                    android:maxLines="1"
                    android:text="nguyenkhanhan30072003@gmail.com"
                    android:textColor="#7D4DE3"
                    android:textSize="20sp"
                    android:fontFamily="@font/text"
                    android:shadowRadius="1"
                    android:shadowColor="@color/black"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>