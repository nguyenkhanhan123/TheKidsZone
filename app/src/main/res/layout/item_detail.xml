<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1E1"
    android:orientation="vertical"
    tools:ignore="ExtraText"
    android:padding="5dp"
    >

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:scaleType="fitCenter"
        android:background="@drawable/bg_image"
        android:src="@drawable/img_kids_music"
        android:layout_margin="10dp"
        android:padding="20dp"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65">
<ImageView
    android:id="@+id/bt_left"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:src="@drawable/ic_next"
    android:rotation="180"
    />
        <Button
            android:id="@+id/bt_play"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#4B64AE"
            android:text="PLAY"
            android:textColor="#F3E0E0"
            android:textSize="18sp"
            android:fontFamily="@font/button"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/bt_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_next"
            />
    </TableRow>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/bg_describe"
            android:layout_margin="5dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="MÔ TẢ"
    android:fontFamily="@font/rowdi_bold"
    android:textSize="24sp"
    android:textColor="@color/black"
    tools:ignore="HardcodedText" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                   android:id="@+id/tv_describe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/ai_la_trieu_phu_text"
                    android:textSize="20sp"
                    android:fontFamily="@font/comic"
                    tools:ignore="ScrollViewSize" />
            </ScrollView>
        </LinearLayout>


</LinearLayout>