<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="5dp"
   >
    <LinearLayout
        android:id="@+id/myLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/myName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:fontFamily=""
            android:paddingEnd="45dp"
            android:text="ID Nh贸m: SQAJAL"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlSymmetry" />
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/item_group"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardBackgroundColor="#7AC8FD"
                app:cardCornerRadius="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="40dp">

                <TextView
                    android:id="@+id/myMes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="6dp"
                    android:text="ID Nh贸m: SQAJALddddddddddddd"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/text"
                    tools:ignore="HardcodedText,RtlSymmetry" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="90dp">
                <ImageView
                    android:id="@+id/myLink"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_name"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>
        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/yourLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/yourName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="45dp"
            android:text="ID Nh贸m: SQAJAL"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlSymmetry" />
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="90dp">
                <ImageView
                    android:id="@+id/yourLink"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_name"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardBackgroundColor="#EAEAEA"
                app:cardCornerRadius="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="40dp">
                <TextView
                    android:id="@+id/yourMes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="6dp"
                    android:fontFamily="@font/text"
                    android:text="ID Nh贸m: SQAJALdddd"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

            </androidx.cardview.widget.CardView>

        </TableRow>

    </LinearLayout>


</LinearLayout>
