<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7AC9FE"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/ic_logo" />
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn chưa đăng nhập vào ứng dụng!"
        android:textColor="@color/black"
        android:fontFamily="@font/brock"
        android:textSize="28sp"
        android:gravity="center"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bt_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_bt"
        android:text="Đăng nhập ngay Tại Đây!"
        android:textColor="#5B00FF"
        android:textSize="20sp"
        android:fontFamily="@font/sap_bold"
        android:shadowColor="@color/white"
        android:shadowRadius="100"
        android:padding="5dp"
        android:layout_marginHorizontal="30dp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/ln_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản?"
            android:textColor="@color/black"
            android:fontFamily="@font/brock"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Đăng ký tài khoản mới"
            android:textColor="#8627FB"
            android:fontFamily="@font/brock"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
</LinearLayout>