<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7AC9FE"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        tools:ignore="ScrollViewSize">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/ic_logo"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textColor="#FFFFFF"
        android:shadowColor="@color/black"
        android:shadowRadius="20"
        android:padding="@dimen/dp_10"
        android:textSize="40sp"
        android:fontFamily="@font/content_font"
        tools:ignore="HardcodedText" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:background="@drawable/bg_edt">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_name"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="6"
            android:hint="Name"
            android:paddingHorizontal="10dp"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="50"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:fontFamily="@font/comic"
            tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,VisualLintTextFieldSize" />
    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:background="@drawable/bg_edt">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_phone"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/edt_sdt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="6"
                android:hint="Số điện thoại"
                android:paddingHorizontal="10dp"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="100"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:fontFamily="@font/comic"
                tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,VisualLintTextFieldSize" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:background="@drawable/bg_edt">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_job"
                tools:ignore="ContentDescription" />

            <Spinner
                android:id="@+id/edt_job"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="6"
                android:paddingHorizontal="10dp"
                android:entries="@array/spinner_values"
                />
        </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_edt"
        android:padding="5dp"
        android:baselineAligned="false">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_email"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="6"
            android:hint="Email"
            android:paddingHorizontal="10dp"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLength="60"
            android:textSize="26sp"
            android:fontFamily="@font/comic"
            android:textColor="@color/black"
            tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,VisualLintTextFieldSize" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:background="@drawable/bg_edt">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_lock"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/edt_pass"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="6"
            android:hint="Password"
            android:paddingHorizontal="10dp"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="100"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:fontFamily="@font/comic"
            tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,VisualLintTextFieldSize" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/iv_notify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_warning"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_notify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="7"
            android:text="Vui lòng sử dụng ít nhất 8 ký tự, bao gồm chữ hoa, chữ thường, số và ký tự đặc biệt!"
            android:paddingHorizontal="10dp"
            android:textColor="#FFFF00"
            android:textSize="14sp"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_re_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:background="@drawable/bg_edt">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_lock"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/edt_re_pass"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="6"
            android:hint="Re -Password"
            android:paddingHorizontal="@dimen/dp_10"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="100"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:fontFamily="@font/comic"
            tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,VisualLintTextFieldSize" />
    </TableRow>
        <TableRow
            android:id="@+id/tr_notify2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/iv_notify2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_warning"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_notify2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_weight="7"
                android:text="Mật khẩu nhắc lại phải giống mật khẩu đã nhập trước đó!"
                android:paddingHorizontal="10dp"
                android:textColor="#FFFF00"
                android:textSize="14sp"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />
        </TableRow>

        <Button
            android:id="@+id/bt_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_bt"
            android:padding="5dp"
            android:text="Sign up"
            android:textColor="#5D03FF"
            android:textSize="24sp"
            android:fontFamily="@font/sap_bold"
            android:shadowColor="@color/white"
            android:shadowRadius="100"
            tools:ignore="HardcodedText,VisualLintButtonSize"
            android:enabled="false"/>

    </LinearLayout>

</ScrollView>